<script type="text/javascript" src="/javascripts/collections/PartyCollection.js"></script>
	

<!-- Backbone Views -->
<script type="text/javascript" src="/javascripts/views/FoodView.js"></script>
<script type="text/javascript" src="/javascripts/views/PartyView.js"></script>	
